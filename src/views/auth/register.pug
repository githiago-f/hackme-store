extends ../layout

block content
  section
    form(method="POST", action="/auth")
      div
        label(for="email") E-mail
        input#email(type="email", name="user_email", placeholder="email@email.com")
      div
        label(for="password") Password
        input#password(type="password", name="user_password", placeholder="*****")
      div
        button.cyan(type="submit") Enviar
