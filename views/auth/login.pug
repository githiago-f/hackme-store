extends ../layout

block head
  style.
    form {
      display: flex;
      flex-direction: column;
      max-width: 500px;
      margin: auto;
    }
    form div {
      width: 100%;
    }
    input {
      width: 100%;
      font-size: 15px;
    }

block content
  h1 Sign in
  form(method="GET", action="/auth")
    div
      label(for="email") E-mail
      input#email(type="email", name="email", placeholder="email@email.com")
    div
      label(for="password") Password
      input#password(type="password", name="password", placeholder="*****")
    div
      button.cyan(type="submit") Enviar
