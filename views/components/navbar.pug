style.
  nav {
    background-color: #333;
    overflow: hidden;
    display: flex;
    justify-content: space-evenly;
  }
  nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }
  nav li {
    float: left;
    height: 100%;
    margin: auto;
    display: flex;
    justify-items: center;
    align-items: center;
  }
  nav li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }
  nav li a:hover {
    background-color: #ddd;
    color: black;
  }
  .create-product {
    background-color: #009688;
    color: white;
    border-radius: 5px;
    padding: 12px 16px;
  }
  .create-product:hover {
    background-color: #00796B;
  }

nav
  a.nostyle(href="/products")
    h1 MaryStore
  ul
    li
      a(href="/products") Home
    if typeof user === 'undefined'
      li
        a(href="/auth/login") Login
    if typeof user !== 'undefined'
      li
        a.create-product(href="/products/create") Create Product
